#!/bin/sh

if [ -f ".init_done" ]; then
    echo "init done"
    /usr/bin/mysqld
else
    echo "init not done"
    echo "start mariadb and setup"
    envsubst < init.sql > init.sql
    /usr/bin/mysqld_safe &
    sleep 5
    mariadb -u root < init.sql
    touch .init_done
    echo "init setup done"
    echo "start mariadb"
    /usr/bin/mysqld
fi